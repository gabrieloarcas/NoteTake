<div class="col-12" id="event_<%= event.id %>">
  <div class="container">
    <div class="d-flex justify-content-between my-2">
      <div>
        <span style="color: #3BB2D6;"><%= better_time(event.start) %></span>
        <span><%= link_to event.name, event, class: "link" %></span>
        <div class=""><%= event.description %></div>
      </div>
      <div>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#update-event_<%= event.id %>">
          Edit
        </button>
          <%= link_to 'Delete', event, method: :delete, class: "btn btn-danger", remote: true %>
      </div>
    </div>
  </div>

    <%= simple_form_for(event, :method => :put, remote:true) do |f| %>
    <div class="modal fade" id="update-event_<%= event.id %>" tabindex="-1" role="dialog" aria-labeledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Edit Event</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          </div>

          <div class="modal-body">
            <div class="form-inputs">
                <%= f.input :name, class: "form-control" %>
                <%= f.input :description, class: "form-control" %>
                <%= f.input :start, class: "form-control" %>
                <%= f.input :finish, class: "form-control" %>
                <%= f.association :user, :as => :hidden, :input_html => { :value => current_user.id }  %>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" id="update-button" class="btn btn-dark" data-dismiss="modal">Close</button>
            <div class="form-actions">
              <%= f.button :submit, class: "btn btn-dark" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>

<hr>

</div>
