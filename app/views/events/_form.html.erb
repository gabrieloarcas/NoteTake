<%= simple_form_for(@event, method: :put, remote:true) do |f| %>
    <div class="modal fade" id="update-event_<%= @event.id %>" tabindex="-1" role="dialog" aria-labeledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-large">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h5 class="modal-title" id="myModalLabel">Close</h5>
          </div>

          <div class="modal-body">
            <div class="form-inputs">
                <%= f.input :name, class: "form-control" %>
                <%= f.input :description, class: "form-control" %>
                <%= f.input :start, class: "form-control" %>
                <%= f.input :finish, class: "form-control" %>
                <%= f.association :user, as: :hidden, :input_html => { :value => current_user.id }  %>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" id="update-button" class="btn btn-dark" data-dismiss="modal">Close</button>
            <div class="form-actions">
              <%= f.button :submit, class: "btn btn-dark" %>
            </div>
          </div>
                

        </div>
      </div>
    <% end %>