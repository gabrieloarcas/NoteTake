<div class="container container-index mb-5">
  <div class="row">
    <div class="text-center">
      <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#new-event">
      New Event
      </button>
    </div>
  </div>
<br>
  
  <div class="row" id="container-events">
    <%= render @events%>
  </div>

<%= simple_form_for(@event, remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="modal fade" id="new-event" tabindex="-1" role="dialog" aria-labelledby="center-event" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Events for  </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-inputs">
            <%= f.input :name, class: "event_name" %>
            <%= f.input :description, class: "event_description"%>
            <%= f.input :start %>
            <%= f.input :finish %>
            <%= f.association :user, :as => :hidden, :input_html => { :value => current_user.id }  %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-dark" data-dismiss="modal" id="new-event-close">Close</button>
          <div class="form-actions">
          <%= f.button :submit, class: "btn btn-dark" %>
          </div>
        </div>
      </div>
    </div>

    <% end %>
  </div>





