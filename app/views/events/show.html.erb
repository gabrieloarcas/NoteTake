
<div class="container container-show mb-5 shadow-sm">
<div class="d-flex justify-content-center">
<h2 class="mt-2"><%= link_to @event.name, @event, class: "link" %></span></h2>
</div>

  <div class="col-12 center" id="event_<%= @event.id %>">
    <div class="container my-2">
      <div class="d-flex justify-content-between my-2">
        <div>
        <strong>Created by: <%= @event.user.username %> &#9656 </strong>
          <span class=""><%= better_time(@event.start) %> - 
          <%= better_time(@event.finish) %></span>
        <!--  <span><%= link_to @event.name, @event, class: "link" %></span> -->
          <div class="custom-description" style="color: grey"><%= @event.description %></div>
        </div>
        
      </div>
      <hr>
      <div class="m-2">Notes:</div>
    </div>
    <div>
      <%= render @event.notes %>
      <div class="m-2">Add your note here:</div>
      <%= render 'notes/form' %>
    </div>

    <div class="d-flex flex-row-reverse">
      <div class="mt-2"><%= link_to 'Back to Events List', events_path, class: "m-2" %></div>
    </div>
  </div>
</div>







