

<hr>
<%= month_calendar events: @events do |date, events| %>
  <%= date %>

  <% events.each do |event| %>
    <div>
      <%= event.start.strftime("%I:%M %p")%>
      <%= link_to event.name, event, class: "link" %>
      <%= event.description %>
    </div>
  <% end %>
<% end %>

